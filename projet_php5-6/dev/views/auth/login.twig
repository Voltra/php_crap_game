{% extends "modules/layout.twig" %}

{% block keywords %}{% endblock %}

{% block title %}Login{% endblock %}

{% if not error %}
    {% set error=[] %}
{% endif %}

{% block body %}
    <form id="loginForm" action="" method="POST">
        <label for="username">Username:</label>
        <input type="text" name="username" id="username" {% if username %}value="{{ username }}"{% else %}value=""{% endif %}/>
        <p class="error">{% if error.username %}{{ error.username }}{% endif %}</p>
        <br/>

        <label for="password">Password:</label>
        <input type="password" name="password" id="password" value=""/>
        <p class="error">{% if error.password %}{{ error.password }}{% endif %}</p>
        <br/>

        <label for="remember">Stay connected:</label>
        <input type="checkbox" name="remember" id="remember" value="" {% if checked %}checked="checked"{% endif %}/>
        <p class="error"></p>
        <br/>

        <button type="submit" disabled="disabled">Login</button>

        <a id="register" href="/auth/register">Want an account ? Register here</a>
    </form>
{% endblock %}